<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.feautures.login.LoginActivity">

    <ImageView
        android:id="@+id/loginImageView"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_baseline_drive_eta_24"
        app:layout_constraintEnd_toStartOf="@id/loginGasImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/green" />

    <ImageView
        android:id="@+id/loginGasImageView"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        android:padding="20dp"
        android:src="@drawable/ic_baseline_local_gas_station_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/loginImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/green" />

    <Button
        android:id="@+id/accountLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        style="@style/green_backgroundTint"
        android:gravity="center"
        android:padding="@dimen/text_normal"
        android:text="LOG IN \n AND SYNCHRONIZE DATA WITH CLOUD"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginImageView" />

    <Button
        android:id="@+id/localLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:padding="@dimen/text_normal"
        android:text="USE AS GUEST"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:textSize="@dimen/text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accountLoginButton" />

    <CheckBox
        android:id="@+id/startCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="@dimen/text_normal"
        android:text="DON'T ASK AGAIN"
        android:textSize="@dimen/text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/localLoginButton" />
</androidx.constraintlayout.widget.ConstraintLayout>