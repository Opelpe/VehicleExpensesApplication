<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.feautures.account.NewAccountActivity">

    <ImageView
        android:id="@+id/newAccountImageView"
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_baseline_drive_eta_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/green" />

    <Button
        android:id="@+id/signWithGoogleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_icons8_google"
        android:drawablePadding="40dp"
        android:padding="20dp"
        android:text="SIGN IN WITH GOOGLE"
        android:textSize="@dimen/text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newAccountImageView" />



    <Button
        android:id="@+id/signInWithEmailButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/green"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="40dp"
        android:drawableTint="@color/white"
        android:padding="15dp"
        android:text="SIGN IN WITH EMAIL"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal"
        app:layout_constraintEnd_toEndOf="@id/signWithGoogleButton"
        app:layout_constraintStart_toStartOf="@id/signWithGoogleButton"
        app:layout_constraintTop_toBottomOf="@id/signWithGoogleButton" />

</androidx.constraintlayout.widget.ConstraintLayout>