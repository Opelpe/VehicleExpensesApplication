<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pepe.vehicleexpensesapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VehicleExpensesApplication">

        <activity
            android:name=".ui.feautures.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.feautures.activity.MyMainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.feautures.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.feautures.account.NewAccountActivity"
            android:exported="false" />
        <activity
            android:name=".ui.feautures.account.email.EmailAccountActivity"
            android:exported="true" />
        <activity
            android:name=".ui.feautures.account.email.usernew.NewUserActivity"
            android:exported="true" />
        <activity
            android:name=".ui.feautures.account.email.userexisted.withemail.ExistedEmailActivity"
            android:exported="true" />
        <activity
            android:name=".ui.feautures.account.email.userexisted.withgoogle.ExistedGoogleActivity"
            android:exported="true" />
        <activity
            android:name=".ui.feautures.refill.RefillActivity"
            android:exported="true" />
        <activity
            android:name=".ui.feautures.logout.LogOutActivity"
            android:exported="true" />
    </application>

</manifest>